<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_invoice_line_customer_search" model="ir.ui.view">
            <field name="name">invoice.line.customer.search</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
                <search string="Search invoice lines">
                    <field name="partner_id" string="Customer"/>
                    <field name="name"/>
                    <field name="ref_product"/>
                    <field name="period_id"/>
                    <filter string="Period" domain="[('period_id', '!=', False)]" icon="terp-document-new"/>
                    <filter string="Invoices" domain="[('type', '=', 'out_invoice')]" icon="terp-document-new"/>
                    <filter string="Refunds" domain="[('type', '=', 'out_refund')]" icon="terp-document-new"/>
                    <filter icon="terp-gtk-jump-to-rtl" name="year_month" string="Default" context="{'group_by' : ['year', 'month']}"/>
                    <group expand="0" string="Group By...">
                        <filter string="Customer" context="{'group_by': 'partner_id'}" icon="terp-dolar"/>
                        <filter string="Product" context="{'group_by': 'name'}" icon="terp-stock_effects-object-colorize"/>
                        <filter string="Month" context="{'group_by': 'month'}" icon="terp-stock_effects-object-colorize"/>
                        <filter string="Year" context="{'group_by': 'year'}" icon="terp-stock_effects-object-colorize"/>
                        <filter string="Period" context="{'group_by': 'period_id'}" icon="terp-stock_effects-object-colorize"/>
                        <filter string="Category" context="{'group_by': 'category'}" icon="terp-stock_effects-object-colorize"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_invoice_line_customer_tree" model="ir.actions.act_window">
            <field name="name">Invoice lines customers</field>
            <field name="res_model">account.invoice.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('type', 'in', ['out_invoice', 'out_refund']), ('invoice_id.number', '!=', False)]</field>
            <field name="context">{'search_default_year_month': 1}</field>
            <field name="search_view_id" ref="view_invoice_line_customer_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create an invoice line.
              </p>
            </field>
        </record>

        <record id="view_invoice_line_customer_tree" model="ir.ui.view">
            <field name="name">invoice.line.customer.tree</field>
            <field name="model">account.invoice.line</field>
            <field eval="20" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Invoice lines customers">
                    <field name="date_invoice"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="ref_invoice"/>
                    <field name="origin_so"/>
                    <field name="name"/>
                    <field name="ref_product"/>
                    <field name="quantity"/>
                    <field name="price_unit"/>
                    <field name="purchase_price"/>
                    <field name="margin_display"/>
                    <field name="price_subtotal" sum="Total"/>
                    <field name="period_id"/>
                    <field name="category"/>
                    <field name="type" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="action_view_invoice_line_customer_tree">
	        <field name="act_window_id" ref="action_invoice_line_customer_tree"/>
	        <field name="sequence" eval="1"/>
	        <field name="view_mode">tree</field>
	        <field name="view_id" ref="view_invoice_line_customer_tree"/>
	    </record>

        <menuitem id="invoice_line_customer" name="Invoice lines customers" parent="account.menu_finance_receivables" sequence="20"
                 action="action_invoice_line_customer_tree"/>

        <record id="view_invoice_line_supplier_search" model="ir.ui.view">
            <field name="name">invoice.line.supplier.search</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
                <search string="Search invoice lines">
                    <field name="partner_id" string="Supplier"/>
                    <field name="name"/>
                    <field name="ref_product"/>
                    <field name="period_id"/>
                    <filter string="Period" domain="[('period_id', '!=', False)]" icon="terp-document-new"/>
                    <filter string="Invoices" domain="[('type', '=', 'in_invoice')]" icon="terp-document-new"/>
                    <filter string="Refunds" domain="[('type', '=', 'in_refund')]" icon="terp-document-new"/>
                    <filter icon="terp-gtk-jump-to-rtl" name="year_month" string="Default" context="{'group_by' : ['year', 'month']}"/>
                    <group expand="0" string="Group By...">
                        <filter string="Supplier" context="{'group_by': 'partner_id'}" icon="terp-dolar"/>
                        <filter string="Product" context="{'group_by': 'name'}" icon="terp-stock_effects-object-colorize"/>
                        <filter string="Month" context="{'group_by': 'month'}" icon="terp-stock_effects-object-colorize"/>
                        <filter string="Year" context="{'group_by': 'year'}" icon="terp-stock_effects-object-colorize"/>
                        <filter string="Period" context="{'group_by': 'period_id'}" icon="terp-stock_effects-object-colorize"/>
                        <filter string="Category" context="{'group_by': 'category'}" icon="terp-stock_effects-object-colorize"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_invoice_line_supplier_tree" model="ir.actions.act_window">
            <field name="name">Invoice lines suppliers</field>
            <field name="res_model">account.invoice.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('type', 'in', ['in_invoice', 'in_refund']), ('invoice_id.number', '!=', False)]</field>
            <field name="context">{'search_default_year_month': 1}</field>
            <field name="search_view_id" ref="view_invoice_line_supplier_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create an invoice line.
              </p>
            </field>
        </record>

        <record id="view_invoice_line_supplier_tree" model="ir.ui.view">
            <field name="name">invoice.line.supplier.tree</field>
            <field name="model">account.invoice.line</field>
            <field eval="20" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Invoice lines suppliers">
                    <field name="date_invoice"/>
                    <field name="partner_id" string="Supplier"/>
                    <field name="ref_invoice"/>
                    <field name="name"/>
                    <field name="ref_product"/>
                    <field name="quantity"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal" sum="Total"/>
                    <field name="period_id"/>
                    <field name="category"/>
                    <field name="type" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="action_view_invoice_line_supplier_tree">
	        <field name="act_window_id" ref="action_invoice_line_supplier_tree"/>
	        <field name="sequence" eval="1"/>
	        <field name="view_mode">tree</field>
	        <field name="view_id" ref="view_invoice_line_supplier_tree"/>
	    </record>

        <menuitem id="invoice_line_supplier" name="Invoice lines suppliers" parent="account.menu_finance_payables" sequence="20"
                 action="action_invoice_line_supplier_tree"/>
    </data>
</openerp>